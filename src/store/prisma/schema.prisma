generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Command {
  id        String   @id @default(uuid())
  source    String   // "sms" | "http" | "cli" | "phone"
  from      String?  // phone number for SMS, null for local
  message   String
  status    String   @default("received") // received | planned | executing | completed | failed
  planJson  String?  // raw planner JSON output
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  actions   Action[]
}

model Action {
  id           String    @id @default(uuid())
  commandId    String
  command      Command   @relation(fields: [commandId], references: [id])
  type         String    // tool name e.g. "tasks.create"
  args         String    // JSON-serialized args
  status       String    @default("pending") // pending | pending_confirm | confirmed | denied | executed | failed | dry_run
  confirmLevel String   // none | soft | hard
  result       String?  // JSON-serialized result
  error        String?
  createdAt    DateTime  @default(now())
  executedAt   DateTime?

  @@index([commandId])
  @@index([status])
}

model Task {
  id        String    @id @default(uuid())
  title     String
  notes     String?
  dueAt     DateTime?
  status    String    @default("open") // open | done
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Reminder {
  id        String   @id @default(uuid())
  text      String
  runAt     DateTime
  fired     Boolean  @default(false)
  result    String?
  createdAt DateTime @default(now())
}

model Note {
  id        String   @id @default(uuid())
  content   String
  tag       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tag])
}

model Bookmark {
  id        String   @id @default(uuid())
  url       String
  title     String?
  tag       String?
  createdAt DateTime @default(now())

  @@index([tag])
}
